<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/head %>
    <base href="/burgers/">
  </head>
  <body>
    
    <header>
      <%- include ../partials/nav %>
    </header>
    <div class="container">

      <div class="starter-template">
        <h1>All The Burgers <a href="./new" class="btn btn-success" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a Burger</a></h1>

        <div class="wrapper">
          <section class="col-md-6 col-md-offset-3">
          <table class="table table-condensed text-left" >
            <tr>
              <th>Burger Name</th>
              <th>Meat</th>
              <th>Cheese</th>
              <th>Action</th>
            </tr>

          <% data.forEach((burger)=>{ %>
            <tr>
              <td><a href="<%=burger.burger_id%>" class="lead"><%=burger.burger_name%></a></td>
              <td><span class="lead"><%=burger.meat_type%></span></td>
              <td><span class="lead"><%=burger.cheese_type%></span></td>
              <td>
                <form method="POST" action="<%=burger.burger_id%>?_method=DELETE">
                <a href="<%=burger.burger_id%>/edit" class="btn btn-sm btn-info" role="button">Edit</a>
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            
          <% }) %>
          </table>
        </div>
      </div>

    </div><!-- /.container -->
    <%- include ../partials/footer %>
  </body>
</html>